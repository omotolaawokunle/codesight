# ── Application ─────────────────────────────────────────────────────────────
APP_NAME=Codesight
APP_ENV=local                        # local | production
APP_KEY=                             # Run: php artisan key:generate
APP_DEBUG=true                       # Set to false in production
APP_URL=http://localhost:8000        # Public URL of the Laravel backend

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ── Logging ──────────────────────────────────────────────────────────────────
# Use "daily" in production so logs rotate automatically
LOG_CHANNEL=stack
LOG_STACK=single                     # single | daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug                      # debug | info | warning | error | critical

# ── Database (PostgreSQL) ────────────────────────────────────────────────────
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1                    # Use "postgres" when running in Docker
DB_PORT=5432
DB_DATABASE=codesight
DB_USERNAME=codesight
DB_PASSWORD=codesight                # Use a strong password in production

# ── Session ──────────────────────────────────────────────────────────────────
SESSION_DRIVER=redis
SESSION_LIFETIME=120                 # Minutes
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ── Queue & Broadcasting ──────────────────────────────────────────────────────
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis               # Processed by Laravel Horizon

# ── Cache ────────────────────────────────────────────────────────────────────
CACHE_STORE=redis

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1                 # Use "redis" when running in Docker
REDIS_PASSWORD=null                  # Set a password in production
REDIS_PORT=6379

# ── Mail ─────────────────────────────────────────────────────────────────────
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@codesight.app"
MAIL_FROM_NAME="${APP_NAME}"

# ── CORS ─────────────────────────────────────────────────────────────────────
# URL of the Vue.js frontend — used by CORS middleware and Sanctum
FRONTEND_URL=http://localhost:5173   # Production: https://your-domain.com

# ── Sanctum ──────────────────────────────────────────────────────────────────
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:5173,127.0.0.1
SANCTUM_TOKEN_PREFIX=

# ── Qdrant (Vector Database) ─────────────────────────────────────────────────
QDRANT_HOST=127.0.0.1               # Use "qdrant" when running in Docker
QDRANT_PORT=6333
QDRANT_API_KEY=                     # Optional; set when Qdrant auth is enabled

# ── AST Microservice ─────────────────────────────────────────────────────────
AST_SERVICE_URL=http://localhost:3001  # Use "http://ast-service:3001" in Docker

# ── AI APIs ──────────────────────────────────────────────────────────────────
# Anthropic Claude — used for chat responses
ANTHROPIC_API_KEY=                   # Required: sk-ant-...

# OpenAI / Google Gemini — used for generating embeddings
OPENAI_API_KEY=                      # Required if using OpenAI embeddings
GOOGLE_API_KEY=                      # Required if using Gemini embeddings

# ── Laravel Horizon ──────────────────────────────────────────────────────────
# Horizon Dashboard is accessible at /horizon (protected by your auth guard)
# No additional config required for development
